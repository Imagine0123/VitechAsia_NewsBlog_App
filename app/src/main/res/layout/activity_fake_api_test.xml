<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Status Display -->
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0"
            android:padding="12dp"
            android:text="Loading status..."
            android:textSize="12sp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="API Testing Controls"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Test Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/testFakeApiButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Test Fake API"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/testRealApiButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Test Real API"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Server Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/startServerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Server"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/stopServerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop Server"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <Button
            android:id="@+id/runFullTestButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Run Full Test Suite" />

        <!-- Results Display -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Test Results:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/resultsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:padding="12dp"
                android:text=""
                android:textColor="#00ff00"
                android:textSize="10sp"
                android:typeface="monospace" />
        </ScrollView>

        <!-- Usage Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Usage Instructions:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="1. Start the fake server to test HTTP endpoints\n2. Use 'Test Fake API' to test the fake service implementation\n3. Use 'Test Real API' to test the real Retrofit service\n4. Check the logs for detailed test results\n5. Access http://10.0.2.2:8080/api/v1/articles in browser when server is running"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>
